# Application
NODE_ENV=development
PORT=3012
APP_NAME=compliance-service
APP_VERSION=1.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartedify_compliance
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_LOGGING=true

# JWT
JWT_SECRET=dev-secret-key-compliance-service-change-in-production
JWT_EXPIRES_IN=1h

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=compliance-service
KAFKA_GROUP_ID=compliance-service-group

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=compliance-service
OTEL_SERVICE_VERSION=1.0.0

# Observability
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
TRACING_ENABLED=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# LLM Configuration (Future - Currently Disabled)
LLM_ENABLED=false
LLM_BASE_URL=http://localhost:8089
EMBEDDINGS_URL=http://localhost:8091
VECTOR_DB_URL=postgres://postgres:postgres@localhost:5432/compliance_rag

# Policy Engine
POLICY_CACHE_TTL_SECONDS=300
POLICY_EVALUATION_TIMEOUT_MS=5000
DEFAULT_DECISION=DENY