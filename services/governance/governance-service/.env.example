# Application Configuration
NODE_ENV=development
PORT=3011
SERVICE_NAME=governance-service
SERVICE_VERSION=3.2.2

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=governance_db
DATABASE_USERNAME=governance_user
DATABASE_PASSWORD=your_password_here
DATABASE_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=governance-service
KAFKA_GROUP_ID=governance-service-group

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# External Services
COMPLIANCE_SERVICE_URL=http://localhost:3012
USER_PROFILES_SERVICE_URL=http://localhost:3002
TENANCY_SERVICE_URL=http://localhost:3003
DOCUMENTS_SERVICE_URL=http://localhost:3006
NOTIFICATIONS_SERVICE_URL=http://localhost:3005
STREAMING_SERVICE_URL=http://localhost:3014
FINANCE_SERVICE_URL=http://localhost:3007

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartedify-governance-recordings
AWS_KMS_KEY_ID=your_kms_key_id_here

# Feature Flags
ENABLE_BIOMETRIC_VALIDATION=true
ENABLE_ASYNC_ASSEMBLIES=true
ENABLE_AI_MINUTES_GENERATION=true
ENABLE_PROXY_VOTING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5000

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
HELMET_ENABLED=true
CSRF_PROTECTION=true

# Retention Policy (days)
DEFAULT_VIDEO_RETENTION_DAYS=1825
DEFAULT_EVIDENCE_RETENTION_DAYS=365
DEFAULT_LOG_RETENTION_DAYS=2555