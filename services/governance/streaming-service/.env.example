# Application
NODE_ENV=development
PORT=3014
SERVICE_NAME=streaming-service
SERVICE_VERSION=2.2.0

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=streaming_user
DATABASE_PASSWORD=streaming_pass
DATABASE_NAME=streaming_db
DATABASE_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=streaming-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=streaming-service
KAFKA_GROUP_ID=streaming-service-group

# Video Providers
GOOGLE_MEET_API_KEY=
ZOOM_API_KEY=
ZOOM_API_SECRET=
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302

# AWS S3 (for recordings)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_RECORDINGS=smartedify-recordings
S3_BUCKET_TRANSCRIPTS=smartedify-transcripts

# Speech-to-Text
GOOGLE_CLOUD_STT_API_KEY=
WHISPER_API_ENDPOINT=

# Feature Flags
ENABLE_BIOMETRIC_VALIDATION=true
ENABLE_TRANSCRIPTION=true
ENABLE_RECORDING=true
ENABLE_QR_VALIDATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_PER_USER=10
RATE_LIMIT_MAX_REQUESTS_PER_TENANT=100

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
METRICS_PORT=9091
HEALTH_CHECK_TIMEOUT=5000

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
HELMET_ENABLED=true

# Session Limits
MAX_SESSIONS_PER_TENANT=10
MAX_BITRATE_MBPS=2
MAX_PARTICIPANTS_PER_SESSION=500

# Retention Policy (days)
DEFAULT_VIDEO_RETENTION_DAYS=1825
DEFAULT_TRANSCRIPT_RETENTION_DAYS=2555

# Service URLs
IDENTITY_SERVICE_URL=http://localhost:3001
GOVERNANCE_SERVICE_URL=http://localhost:3011
TENANCY_SERVICE_URL=http://localhost:3003
USER_PROFILES_SERVICE_URL=http://localhost:3002
NOTIFICATIONS_SERVICE_URL=http://localhost:3005