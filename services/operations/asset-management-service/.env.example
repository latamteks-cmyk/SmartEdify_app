# Application Configuration
NODE_ENV=development
PORT=3010
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=smartedify_assets
DB_SSL=false
DB_MAX_CONNECTIONS=25
DB_ENABLE_RLS=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=2000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Observability
METRICS_ENABLED=true
TRACING_ENABLED=true
ENABLE_AUDIT_LOG=true
ENABLE_EVENT_SOURCING=true
ENABLE_METRICS=true

# OpenTelemetry
OTEL_SERVICE_NAME=asset-management-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=asset-management-service
KAFKA_GROUP_ID=asset-management-service-group

# External Services
IDENTITY_SERVICE_URL=http://localhost:3001
TENANCY_SERVICE_URL=http://localhost:3003
FINANCE_SERVICE_URL=http://localhost:3007
HR_SERVICE_URL=http://localhost:3009
NOTIFICATIONS_SERVICE_URL=http://localhost:3005
DOCUMENTS_SERVICE_URL=http://localhost:3006
MARKETPLACE_SERVICE_URL=http://localhost:3015
ANALYTICS_SERVICE_URL=http://localhost:3016

# Business Rules
DEFAULT_MAINTENANCE_REMINDER_DAYS=7
MAX_PROVIDERS_PER_SOS=3
SOS_RESPONSE_TIMEOUT_HOURS=72
WORK_ORDER_REMINDER_HOURS=24

# Security
ENCRYPTION_KEY=your-32-character-encryption-key

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_LLM_CLASSIFICATION=true
ENABLE_PREDICTIVE_MAINTENANCE=true
ENABLE_SWAGGER_DOCS=true
ENABLE_DEBUG_LOGS=false