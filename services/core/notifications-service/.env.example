# Application Configuration
NODE_ENV=development
PORT=3005
SERVICE_NAME=notifications-service

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=smartedify_notifications
DATABASE_USERNAME=notifications_service
DATABASE_PASSWORD=notifications_service_password
DATABASE_SCHEMA=public

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=notifications:
REDIS_TTL=3600

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=notifications-service
KAFKA_GROUP_ID=notifications-service-group
KAFKA_NOTIFICATIONS_TOPIC=notifications
KAFKA_EVENTS_TOPIC=events
KAFKA_DEAD_LETTER_TOPIC=notifications-dead-letter

# External Services
IDENTITY_SERVICE_URL=http://identity-service:3001
TENANCY_SERVICE_URL=http://tenancy-service:3003

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Multi-tenancy
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000000
TENANT_HEADER_NAME=x-tenant-id

# Logging
LOG_LEVEL=info

# Provider Configurations (Examples)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@smartedify.com

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890

# FCM
FCM_SERVER_KEY=your-fcm-server-key