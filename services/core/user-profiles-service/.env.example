# Application Configuration
NODE_ENV=development
PORT=3002
SERVICE_NAME=user-profiles-service

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=smartedify_profiles
DATABASE_USERNAME=profiles_service
DATABASE_PASSWORD=profiles_service_password
DATABASE_SCHEMA=public

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=profiles:
REDIS_TTL=3600

# External Services
COMPLIANCE_SERVICE_URL=http://compliance-service:3012
IDENTITY_SERVICE_URL=http://identity-service:3001
TENANCY_SERVICE_URL=http://tenancy-service:3003

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# Kafka Configuration (for events)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=user-profiles-service
KAFKA_GROUP_ID=user-profiles-service-group

# Observability
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=false

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Multi-tenancy
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000000
TENANT_HEADER_NAME=x-tenant-id