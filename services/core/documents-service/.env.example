# Application Configuration
NODE_ENV=development
PORT=3006
SERVICE_NAME=documents-service

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=smartedify_documents
DATABASE_USERNAME=documents_service
DATABASE_PASSWORD=documents_service_password
DATABASE_SCHEMA=public

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=smartedify-documents

# S3 Encryption
S3_ENCRYPTION_ENABLED=true
S3_KMS_KEY_ID=your-kms-key-id
S3_ENCRYPTION_ALGORITHM=AES256

# File Upload Settings
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,image/gif,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Presigned URLs
PRESIGNED_URL_EXPIRES=3600

# External Services
GOVERNANCE_SERVICE_URL=http://governance-service:3011
IDENTITY_SERVICE_URL=http://identity-service:3001

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# AI Integration (MCP)
MCP_ENABLED=true
MCP_SERVER_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Multi-tenancy
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000000
TENANT_HEADER_NAME=x-tenant-id

# Logging
LOG_LEVEL=info