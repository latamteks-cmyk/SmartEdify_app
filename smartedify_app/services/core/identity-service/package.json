{
  "name": "@smartedify/identity-service",
  "version": "3.3.0",
  "description": "Central Identity, Authentication, and Authorization provider for the SmartEdify platform, aligned with technical specification v3.3.",
  "author": "SmartEdify",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "node node_modules/@nestjs/cli/bin/nest.js build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:strict": "eslint --ext .ts --config eslint.config.ci.mjs .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "node node_modules/jest/bin/jest.js --coverage",
    "test:ci": "jest --runInBand",
    "test:cov:ci": "node node_modules/jest/bin/jest.js --coverage --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:perf:simple": "node -r ts-node/register test/performance/simple-load-test.perf-spec.ts",
    "test:perf:advanced": "node -r ts-node/register test/performance/load-test.perf-spec.ts",
    "test:perf:stress": "node -r ts-node/register test/performance/stress-test.perf-spec.ts",
    "test:perf:soak": "node -r ts-node/register test/performance/soak-test.perf-spec.ts",
    "test:perf:spike": "node -r ts-node/register test/performance/spike-test.perf-spec.ts"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@open-policy-agent/opa-wasm": "^1.10.0",
    "@simplewebauthn/server": "^13.2.1",
    "argon2": "^0.44.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "jose": "^5.10.0",
    "kafkajs": "^2.2.4",
    "node-jose": "^2.2.0",
    "otplib": "^12.0.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@simplewebauthn/browser": "^13.2.0",
    "@simplewebauthn/types": "^12.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/node-jose": "^1.1.13",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
